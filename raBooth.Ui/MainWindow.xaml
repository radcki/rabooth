<Window x:Class="raBooth.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:raBooth.Ui"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">

                <Button Command="{Binding Path=CaptureCommand}" Margin="20">Capture</Button>
                <Button Command="{Binding Path=ResetCommand}" Margin="20">Reset</Button>
                <Button Command="{Binding Path=StopCommand}" Margin="20">Stop</Button>
            </StackPanel>
        </Grid>
        <Viewbox Grid.Row="1" Stretch="Uniform" Height="1080">

            <Grid Width="1024" Height="1536">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="40 40 40 0" Width="1024" Height="768">
                    <Canvas ClipToBounds="True" Width="1024" Height="768">
                        <Image Source="{Binding Path=Image1.Preview}" Stretch="None"></Image>
                    </Canvas>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="40" Width="512" Height="768">
                        <Image Source="{Binding Path=Image2.Preview}" HorizontalAlignment="Center" Stretch="None"></Image>
                    </Grid>
                    <Grid Grid.Column="1" Margin="40" Width="512" Height="768">
                        <Image Source="{Binding Path=Image3.Preview}" HorizontalAlignment="Center"  Stretch="None"></Image>
                    </Grid>

                </Grid>
            </Grid>
        </Viewbox>
    </Grid>

</Window>